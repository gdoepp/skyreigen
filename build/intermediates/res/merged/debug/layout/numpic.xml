<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/numpicView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tzsign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="+"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="12sp" />

    <Button
        android:id="@+id/tzh1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="1dp"
        android:text="-"
        android:textSize="18sp"
        android:width="4dp" />

    <TextView
        android:id="@+id/tzhtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="01"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="12sp" />

    <Button
        android:id="@+id/tzh2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="1dp"
        android:text="+"
        android:textSize="18sp"
        android:width="4dp" />

    <TextView
        android:id="@+id/tzcolon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text=":"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="12sp" />

    <Button
        android:id="@+id/tzm1"
        android:layout_width="wrap_content"
        style="?android:attr/buttonStyleSmall"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="1dp"
        android:text="-"
        android:textSize="18sp"
        android:width="4dp" />

    <TextView
        android:id="@+id/tzmtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="30"

        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="12sp" />

    <Button
        android:id="@+id/tzm2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:layout_gravity="center_vertical"
        android:text="+"
        android:textSize="18sp"
        android:width="4dp" />


</LinearLayout>